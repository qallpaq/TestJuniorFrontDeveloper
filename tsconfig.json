{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "api/*": ["client/src/api/*"],
      "components/*": ["client/src/components/*"],
      "constants/*": ["client/src/constants/*"],
      "hocs/*": ["client/src/hocs/*"],
      "hoocs/*": ["client/src/hoocs/*"],
      "pages/*": ["client/src/pages/*"],
      "reducers/*": ["client/src/reducers/*"],
      "routes/*": ["client/src/routes/*"],
      "service/*": ["client/src/service/*"],
      "store/*": ["client/src/store/*"],
      "thunk/*": ["client/src/thunk/*"],
      "types/*": ["client/src/types/*"],
      "utils/*": ["client/src/utils/*"]
    },
    "module": "esnext",
    "target": "ES5",
    "strict": true,
    "strictNullChecks": true,
    "noEmit": true,
    "pretty": true,
    "allowJs": false,
    "sourceMap": true,
    "incremental": true,
    "declaration": true,
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowUnreachableCode": false,
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "importsNotUsedAsValues": "preserve",
    "jsx": "react",
    "lib": ["dom", "es2015", "esnext"],
    "types": ["node", "jest"]
  },
  "exclude": ["node_modules"],
  "include": ["./client/src/**/*.ts", "./client/src/**/*.tsx"]
}
